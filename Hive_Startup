CREATE TABLE DEPARTMENT

CREATE TABLE DEPARTMENT
(
DEP_NO INT,
DEP_NAME STRING,
LOCATION_ID INT
)
ROW FORMAT DELIMITED
FIELDS TERMINATED BY ',';

EMPLOYEES TABLES;

CREATE TABLE EMPLOYEE
(
EMPNO INT,
NAME STRING,
JOB STRING,
BOSS STRING,
HIRE_DATE TIMESTAMP,
SALARY FLOAT,
COMM FLOAT,
DEPTNO INT
)
ROW FORMAT DELIMITED
FIELDS TERMINATED BY ',';

